{
  "manifest_version": 3,
  "name": "Polymarket Notes",
  "version": "1.0.0",
  "description": "Shows Polymarket events as market notes on X (Twitter) posts",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "popup.js", "icons/pmarket.png"],
      "matches": ["https://x.com/*", "https://twitter.com/*"]
    }
  ]
}